        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <project.java.version>10</project.java.version>
    </properties>

    <developers>
        <developer>
            <id>tyrantqiao</id>
            <name>tyrantqiao</name>
            <email>tyrantqiao@gmail.com</email>
            <url>https://tyrantqiao.com</url>
